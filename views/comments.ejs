<% include partials/header %>
<div class="container">
    <h1><%= title %></h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Body</th>
            </tr>
            <% comments.forEach(function(comment){ %>
            <tr>
                <td><%= comment.id %> </td>
                <td><%= comment.name %> </td>
                <td><%= comment.email %> </td>
                <td><%= comment.body %> </td>
            </tr>
            <% }) %>

        </table>
    </div>
</div>
<% include partials/footer %>